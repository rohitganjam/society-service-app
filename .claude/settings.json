{
  "permissions": {
    "allow": [
      "Bash(npm install)",
      "Bash(flutter create:*)",
      "Bash(make:*)",
      "Bash(flutter test:*)",
      "Bash(flutter analyze)",
      "Bash(npm test:*)",
      "Bash(npm run lint:*)",
      "Bash(npm run format:*)",
      "Bash(dart run build_runner:*)"
    ],
    "deny": [],
    "ask": []
  },
  "hooks": {
    "preToolCall": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "echo 'Editing file - tests required after changes'"
          }
        ]
      }
    ],
    "postToolCall": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "if [[ \"$CLAUDE_FILE_PATH\" == *.go ]]; then cd backend && go fmt ./... 2>/dev/null; fi"
          }
        ]
      },
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "if [[ \"$CLAUDE_FILE_PATH\" == *.dart ]]; then dart format \"$CLAUDE_FILE_PATH\" 2>/dev/null; fi"
          }
        ]
      }
    ]
  },
  "env": {
    "BACKEND_DIR": "backend",
    "RESIDENT_APP_DIR": "apps/resident_app",
    "VENDOR_APP_DIR": "apps/vendor_app",
    "SOCIETY_ADMIN_DIR": "apps/society-admin-web",
    "PLATFORM_ADMIN_DIR": "apps/platform-admin-web"
  }
}
