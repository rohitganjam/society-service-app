{
  "name": "society-service-platform",
  "version": "1.0.0",
  "description": "Multi-service platform for society management",
  "private": true,
  "workspaces": [
    "backend",
    "apps/society-admin-web",
    "apps/platform-admin-web",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=backend",
    "build": "npm run build --workspaces",
    "test": "npm test --workspaces",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\""
  },
  "keywords": [
    "society",
    "service",
    "laundry",
    "platform"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.3.0"
  }
}
